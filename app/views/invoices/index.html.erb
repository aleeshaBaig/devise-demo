<p style="color: green"><%= notice %></p>

<h1>Invoices</h1>
<div class="pull-right range-query">
  <%= form_tag invoices_path, method: :get do %>
  <%= text_field_tag 'search[date_from]', @search.date_from %>
  <%= text_field_tag 'search[date_to]', @search.date_to %>
  <%= submit_tag 'Search', class: 'btn search-button' %>
  <% end %>

</div>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Amount</th>
          <th>Company</th>
        </tr>
      </thead>
      <tbody>
        <% @invoices.each do |invoice| %>
        <tr>
          <td><%= invoice.date %></td>
          <td><%= invoice.amount %></td>
          <td><%= invoice.company %></td>
          <td><%= link_to "Show this invoice", invoice %></td>
          <td><%= link_to "New invoice", new_invoice_path %></td>
           <td><%= link_to "Destroy", @invoice, data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?"
          } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
 

